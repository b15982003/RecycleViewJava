<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/back"
        android:background="@color/graw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="20dp"
        >

        <TextView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/back"
            app:layout_constraintStart_toStartOf="@id/back"
            app:layout_constraintEnd_toEndOf="@id/back"
            />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/top"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toBottomOf="@id/top"
            android:text="學號："
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            />

        <TextView
            android:id="@+id/bar_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintStart_toStartOf="@id/back"
            android:text="科目1:"
            style="@style/bar"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXTVIEW 1"
            app:layout_constraintTop_toTopOf="@id/bar_text1"
            app:layout_constraintBottom_toBottomOf="@id/bar_text1"
            app:layout_constraintStart_toEndOf="@id/bar_text1"
            android:layout_marginStart="12dp"
            />

        <TextView
            android:id="@+id/bar_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bar_text1"
            app:layout_constraintStart_toStartOf="@id/bar_text1"
            android:text="科目2:"
            style="@style/bar"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXTVIEW 2"
            app:layout_constraintTop_toTopOf="@id/bar_text2"
            app:layout_constraintBottom_toBottomOf="@id/bar_text2"
            app:layout_constraintStart_toEndOf="@id/bar_text2"
            android:layout_marginStart="12dp"
            />



        <TextView
            android:id="@+id/bar_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bar_text2"
            app:layout_constraintStart_toStartOf="@id/bar_text2"
            android:text="平均分數:"
            style="@style/bar"
            android:layout_marginTop="16dp"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEXTVIEW 3"
            app:layout_constraintTop_toTopOf="@id/bar_text3"
            app:layout_constraintBottom_toBottomOf="@id/bar_text3"
            app:layout_constraintStart_toEndOf="@id/bar_text3"
            android:layout_marginStart="12dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>